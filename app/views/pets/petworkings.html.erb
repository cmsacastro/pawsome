

  <div id="carouselExampleIndicators"  class="carousel slide container" data-ride="carousel" style="background-color:grey">
  <ol class="carousel-indicators">
    <% @pet.photos.each_with_index do |photo, index| %>
      <li data-target="#carouselExampleIndicators" data-slide-to="<%= index %>" class="<%= index == 0 ? 'active' : '' %>"></li>
    <% end %>
    <% <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li> %>
  </ol>
  
  <div class="carousel-inner">
    <% @pet.photos.each_with_index do |photo, index| %>
      <div class="carousel-item <%= 'active' if index == 0 %>"> 
        <%= cl_image_tag photo.key, height: 500, width: 600,  crop: :fit %>      
      </div>
    <%end%>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>