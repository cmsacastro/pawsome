<div>
  <%= simple_form_for(@user , url: update_preferences_path, :method => :get) do |f| %>
    <%= f.input :address, label: "Location:"%>
    <%= f.input :species, label: "I'am interested in:", collection: ["cat", "dog", "rodent", "no preference"],
                  as: :radio_buttons,
                  input_html: { class: "tag-selector" },
                  item_wrapper_class: 'tag-item' %>
    <%= f.input :breed, label: "Prefered Breed", collection: Pet::CATBREED, disabled: true %>
    <%= f.input :age, label: "Do you have a prefered age?", :collection => [['Puppy', 1], ['1-7', 2], ['7-12', 3], ['+12', 4], ['no preference', 0]],
                  as: :radio_buttons,
                  input_html: { class: "tag-selector" },
                  item_wrapper_class: 'tag-item' %>
    <%= f.input :garden, label: "Do you have a garden?", :collection => [['Yes', true], ['No', false]],
                  as: :radio_buttons,
                  input_html: { class: "tag-selector" },
                  item_wrapper_class: 'tag-item' %>
    <%= f.input :other_pets, label: "Do you have other pets?", :collection => [['Yes', true], ['No', false]],
                  as: :radio_buttons,
                  input_html: { class: "tag-selector" },
                  item_wrapper_class: 'tag-item' %>
    <%= f.input :other_children, label: "Do you have children?", :collection => [['Yes', true], ['No', false]],
                  as: :radio_buttons,
                  input_html: { class: "tag-selector" },
                  item_wrapper_class: 'tag-item' %>
    <%= f.input :special_needs, label: "Would you be interested in adopting a pet with special needs?", :collection => [['Yes', true], ['No', false]],
                  as: :radio_buttons,
                  input_html: { class: "tag-selector" },
                  item_wrapper_class: 'tag-item' %>
    <%= f.input :available_time, label: "How many hours are you away each day?", :collection => [['0-3', 1], ['3-6', 2], ['6-10', 3], ['+10', 4]],
                  as: :radio_buttons,
                  input_html: { class: "tag-selector" },
                  item_wrapper_class: 'tag-item' %>
    <%= f.submit "Confirm my preferences" %>
  <% end %>
</div>
